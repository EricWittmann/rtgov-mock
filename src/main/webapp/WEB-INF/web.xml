<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

  <display-name>RTGov Mock</display-name>

  <servlet>
    <servlet-name>MockServices</servlet-name>
    <servlet-class>
      org.overlord.rtgov.mock.server
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MockServices</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>S-RAMP</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>overlorduser</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>OverlordRealm</realm-name>
  </login-config>

  <security-role>
    <role-name>overlorduser</role-name>
  </security-role>
</web-app>
